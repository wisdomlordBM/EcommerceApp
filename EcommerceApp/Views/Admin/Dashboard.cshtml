@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">

    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold">Admin Dashboard</h2>
        <p class="text-muted">
            Manage your store operations from one central place.
        </p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4">

        <!-- Products -->
        <div class="col-md-6 col-lg-4">
            <div class="card dashboard-card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-circle bg-primary text-white me-3">
                        <i class="bi bi-box-seam fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1 fw-semibold">Products</h5>
                        <p class="text-muted mb-2">
                            View and manage your inventory
                        </p>
                        <a href="/Admin/Products" class="btn btn-sm btn-outline-primary">
                            View Products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Product -->
        <div class="col-md-6 col-lg-4">
            <div class="card dashboard-card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-circle bg-success text-white me-3">
                        <i class="bi bi-plus-circle fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1 fw-semibold">Add Product</h5>
                        <p class="text-muted mb-2">
                            Create and publish new products
                        </p>
                        <a href="/Admin/CreateProduct" class="btn btn-sm btn-outline-success">
                            Add Product
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Future Expansion Placeholder -->
        <div class="col-md-6 col-lg-4">
            <div class="card dashboard-card shadow-sm border-0 h-100 opacity-75">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-circle bg-secondary text-white me-3">
                        <i class="bi bi-graph-up fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1 fw-semibold">Analytics</h5>
                        <p class="text-muted mb-2">
                            Sales insights & performance
                        </p>
                        <button class="btn btn-sm btn-outline-secondary" disabled>
                            Coming Soon
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .dashboard-card {
        border-radius: 16px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
        }

    .icon-circle {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
