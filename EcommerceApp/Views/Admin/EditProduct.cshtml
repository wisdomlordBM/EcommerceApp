@model EcommerceApp.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title">Edit Product</h2>
                <form id="editProductForm">
                    <input type="hidden" id="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="name" class="form-control" value="@Model.Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea id="description" class="form-control">@Model.Description</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" id="price" step=".01" class="form-control" value="@Model.Price" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Stock</label>
                        <input type="number" id="stock" class="form-control" value="@Model.Stock" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <input type="text" id="category" class="form-control" value="@Model.Category" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input type="text" id="imageUrl" class="form-control" value="@Model.ImageUrl" required />
                    </div>
                    <button class="btn btn-primary w-100">Update Product</button>
                </form>
                <div id="editProductMsg" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/admin.js"></script>
}